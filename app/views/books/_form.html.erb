<%= simple_form_for @book, html: { multipart: true } do |form| %>
  <%#= select_tag(:category_id, options_for_select(@categories), prompt: "Select Category") %>
  <%= form.select :category_id, @categories %>
  <%= form.input :title, label: "Book Title" %>
  <%= form.input :description %>
  <%= form.input :author %>
  <%= form.input :cover_image, label: "Upload a cover image" %>
  <%= form.input :book_file, label: "Upload the pdf file or the ebook" %>
  <%= form.button :submit %>
<% end %>