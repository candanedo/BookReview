<h3>Edit Review</h3>

<%= simple_form_for([@book, @review]) do |form| %>
  <div id="rating-form">
    <label>Rating</label>
  </div>
  <%= form.input :comment %>
  <%= form.submit %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
